<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="span8">
    <% if @user.articles.any? %>
      <h3>Articles I've written (<%= @user.articles.count %>)</h3>
      <ol class="articles">
        <%= render @articles %>
      </ol>
	<% else %>
		<h3>You haven't written any articles</h3>
    <% end %>
  </div>
</div>